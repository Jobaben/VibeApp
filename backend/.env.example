# Application
APP_NAME=VibeApp
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://vibeapp:vibeapp123@localhost:5432/vibeapp_db

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Server
HOST=0.0.0.0
PORT=8000

# Stock Data API
# Set to true to try fetching from Yahoo Finance (may be blocked for automated requests)
# Default is false - uses reliable mock data for development and AI usage
USE_REAL_STOCK_API=false

# Set to true to always use mock data (overrides USE_REAL_STOCK_API)
FORCE_MOCK_DATA=false

# Note: Yahoo Finance may block automated requests with 403 errors.
# For production, consider using a paid API service:
# - Alpha Vantage: https://www.alphavantage.co/
# - Financial Modeling Prep: https://financialmodelingprep.com/
# - IEX Cloud: https://iexcloud.io/
